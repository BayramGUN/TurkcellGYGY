@model IEnumerable<CourseDisplayResponse>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach(var courseDisplay in Model)
    {
        <div class="col-3">
            <div class="card"> 
                <h4 class="card-title">
                    @courseDisplay.Title
                </h4>
                <img  src="@courseDisplay.ImageUrl" class="img-fluid">
                <p class="card-text"><b>@courseDisplay.Name</b></p> <br>
                <p class="card-text">@courseDisplay.Description</p>
                <p class="card-text"><b>@courseDisplay.Price TL</b></p>

            </div>
        </div>
    }
</div>
